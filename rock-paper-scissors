import random 
choices=['rock','scissors','paper']
user_choice = input("enter your choice('rock','paper','scissors'):")
lappy_choice = random.choice(choices)
print("you choosed {user_choice}and lappy choosed {lappy_choice}")
if user_choice ==  lappy_choice :
    print("both choosed same...so tie !")
elif user_choice == 'rock':
    if lappy_choice =='scissors':
        print("rock smashed scissors...you won:)")
    else :
        print("paper covered rock...you lost :(")
elif user_choice =='scissors':
    if lappy_choice  == 'rock':
        print("rock smashed scissors...you lost:(")
    else : 
        print("scissors cut paper...you won :)")
elif user_choice == 'paper':
    if lappy_choice =='rock':
        print("paper covered rock...you won :)")
    else :
        print("scissors cut paper...you lost:(")
